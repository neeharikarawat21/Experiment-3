//Ques 5. WAP using ternary operator, the user should input the length and breadth of a rectangle, one has to find out which rectangle has the highest perimeter. The minimum number of rectangles should be three.

//Answer

///Program:

#include <stdio.h>

int main() {

int l1, b1, l2, b2, l3, b3;

int p1, p2, p3, max, rect, n;

// Ask user for nummer of rectangles

printf("Enter the number of rectangles (minimum 3): "); 
scanf("%d", &n);

if(n < 3) {

printf("Error: You must enter least 3 rectangles.\n");

return 1; // Exit the program

// Input length and breadth of 3 rectangles 
printf("Enter length and breadth of Rectangle 1: "); 
scanf("%d %d", &l1, &b1);

printf("Enter langth and breadth of Rectangle 2: ");

scanf("%d %d", &l2, &b2);

printf("Enter length and breadth of Rectangle 3: ");

scanf("%d %d", &l3, &b3);

// Calculate perimeters
p1 = 2 * (l1 + b1);

p2 = 2 * (l2 + b2);

p3 = 2 * (l3 + b3);


}

// Find maximum perimeter using ternary operator

max (p1 > p2) ? ((p1 > p3) ? p1 : p3) : ((p2 > p3) ? p2 : p3);

// Find which rectangle has maximum perimeter 
rect = (max == p1) ? 1 : (max == p2) ? 2 : 3;

// Display results

printf("\nPerimeter of Rectangle 1 = %d", p1);

printf("\nPerimeter of Rectangle 2 = %d", p2);

printf("\nPerimeter of Rectangle 3 = %d", p3);

printf("\nRectangle %d has the highest perimeter = %d\n", rect, max);

return 0;
}